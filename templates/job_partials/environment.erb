
<% if @user -%>
setuid <%= @user %>
<% end -%>
<% ########################## -%>
<% if @group -%>
<%= @user ? "" : "\n" -%>
setgid <%= @group %>
<% end -%>
<% ########################## -%>
<% if @chdir -%>

chdir <%= @chdir %>
<% end -%>
<% ########################## -%>
<% unless @environment.empty? -%>

<%   environment.each do |key, value| -%>
env <%= key %>=<%= value %>
<%   end -%>
<% end -%>
